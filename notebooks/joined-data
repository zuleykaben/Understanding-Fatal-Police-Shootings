plt.figure(figsize=(8, 4))

# Plot the bar chart and capture the Axes object
ax = race_counts.plot(
    kind="bar",
    color="none",      # transparent bars
    edgecolor="white", # white outlines
    linewidth=2        # thickness of bars
)

plt.xlabel("Race", color="white")
